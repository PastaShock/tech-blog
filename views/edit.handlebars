<div class="card">
    <h3 class="card-header">Edit Post</h3>
    <form class="card-body editPost">
        <label for="post-title" class="form-label">Title</label>
        <input name="title" type="text" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="content">Content</label>
        <input name="body" type="text" value="{{post.body}}" class="form-input" />
        <button type="submit" class="btn">Update Post</button>
        <button type="button" class="deletePost btn">Delete Post</button>
    </form>
</div>


<script src="/js/editPost.js"></script>